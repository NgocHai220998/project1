<table class="table table-striped">
  <thead>
    <tr>
      <th>#</th>
      <th>レビューの投稿時間</th>
      <th>レビューのコメント</th>
    </tr>
  </thead>
  <tbody>
    <% spot.spot_reviews.first(3).each.with_index(1) do |spot_review, index| %>
    <tr class="table-info">
      <th scope="row"><%= index %></th>
      <td><%= spot_review.posted_at %></td>
      <td><%= spot_review.comment.truncate(20) %></td>
    </tr>
    <% end %>
  </tbody>
</table>
